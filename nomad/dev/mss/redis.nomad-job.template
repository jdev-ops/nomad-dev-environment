job "redis" {

  region = "global"

  datacenters = [
    "dc1"]

  type = "service"

  update {
    stagger = "5s"
    max_parallel = 1
  }

  group "server" {

    network {
      port "port_server" {
        to = 6379
      }
    }

    task "task-redis" {
      driver = "docker"

      config {

        image = "redis:6.0.9"
        hostname = "redis.service.dc1.consul"

        ports = [
          "port_server"]

        command = "redis-server"
        args = [
          "--appendonly yes"
        ]

        tty = true

        volumes = [
          "{{ redis_data }}:/data"
        ]

      }

      service {
        name = "redis"
        port = "port_server"
        address_mode = "driver"

        check {
          type = "tcp"
          port = "port_server"
          interval = "10s"
          timeout = "2s"
        }

      }

      resources {
        memory = 1000
      }

    }

  }
}

